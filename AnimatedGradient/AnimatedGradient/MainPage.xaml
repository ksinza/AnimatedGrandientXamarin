<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimatedGradient.MainPage">

   <Grid>
       <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0">
           <BoxView.Background>
               <LinearGradientBrush >
                   <GradientStop Color="#23D5AB" Offset="0.5"/>
                   <GradientStop Color="#23A605" Offset="0.3" />
                   <GradientStop Color="#E73C7E" Offset="0.7" />
                   <GradientStop Color="#EE7752" Offset="1.0" />

               </LinearGradientBrush>
           </BoxView.Background>
       </BoxView>

       <Frame WidthRequest="250" BorderColor="White"
              BackgroundColor="Transparent" VerticalOptions="Center"
              HorizontalOptions="Center">

           <Label Text="Animated gradient background" TextColor="White"
                  HorizontalTextAlignment="Center" FontSize="30"/>

       </Frame>
   </Grid>

</ContentPage>
